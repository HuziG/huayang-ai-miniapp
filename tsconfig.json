{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "jsx": "preserve",
    "allowJs": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@/components/*": ["./src/components/*"],
      "@/interface/*": ["./src/interface/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/assets/*": ["./src/assets/*"],
      "@/enum/*": ["./src/enum/*"],
      "@/stores/*": ["./src/stores/*"],
      "@/api/*": ["./src/api/*"],
      "@/hook/*": ["./src/hook/*"],
      "@/plugins/*": ["./src/plugins/*"],
      "@/moduleComponents/*": ["./src/moduleComponents/*"],
      "@/src/*": ["./src/*"],
    },
  },
  "include": ["./src", "./types"],
  "compileOnSave": false
}
